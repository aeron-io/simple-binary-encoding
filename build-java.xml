<project  basedir="." xmlns:artifact="antlib:org.apache.maven.artifact.ant">



  <property name="maven-ant-tasks.lib" location="main/lib/maven-ant-tasks-2.1.3.jar"/>
<!--
  <typedef resource="org/apache/maven/artifact/ant/antlib.xml"
           uri="antlib:org.apache.maven.artifact.ant"
           classpath="${maven-ant-tasks.lib}" />
-->
 <taskdef resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant"  classpath="${maven-ant-tasks.lib}"/>

  <target name="buildjava">
    <artifact:mvn pom="main/java/pom.xml">
      <arg value="install"/>
    </artifact:mvn>
  </target>

  <target name="java:clean">
    <artifact:mvn pom="main/java/pom.xml">
      <arg value="clean" />
    </artifact:mvn>
  </target>


</project>

